<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2FC535"
    android:padding="16sp"
    android:scrollbarSize="25sp"
    tools:context=".ui.dashboard.DashboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageView
            android:id="@+id/chip_1"
            android:layout_width="62dp"
            android:layout_height="51dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/frame_image_view"
            android:cropToPadding="true"
            app:layout_constraintBottom_toTopOf="@+id/table_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/chip1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/table_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15" />

        <ImageView
            android:id="@+id/chip_5"
            android:layout_width="62dp"
            android:layout_height="51dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/frame_image_view"
            android:cropToPadding="true"
            app:layout_constraintBottom_toTopOf="@+id/table_guideline"
            app:layout_constraintStart_toEndOf="@+id/chip_1"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/chip5" />

        <ImageView
            android:id="@+id/chip_10"
            android:layout_width="62dp"
            android:layout_height="51dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/frame_image_view"
            android:cropToPadding="true"
            app:layout_constraintBottom_toTopOf="@+id/table_guideline"
            app:layout_constraintStart_toEndOf="@+id/chip_5"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/chip10" />

        <ImageView
            android:id="@+id/chip_20"
            android:layout_width="62dp"
            android:layout_height="51dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/frame_image_view"
            android:cropToPadding="true"
            app:layout_constraintBottom_toTopOf="@+id/table_guideline"
            app:layout_constraintStart_toEndOf="@+id/chip_10"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/chip20" />

        <ImageView
            android:id="@+id/chip_50"
            android:layout_width="62dp"
            android:layout_height="51dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/frame_image_view"
            android:cropToPadding="true"
            app:layout_constraintBottom_toTopOf="@+id/table_guideline"
            app:layout_constraintStart_toEndOf="@+id/chip_20"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/chip50" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/table_guideline_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.78" />

        <ImageView
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="4dp"
            android:adjustViewBounds="true"
            android:background="@drawable/frame_image_view"
            android:cropToPadding="true"
            app:layout_constraintBottom_toBottomOf="@id/table_guideline_2"
            app:layout_constraintTop_toTopOf="@id/table_guideline"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/table"
            tools:layout_editor_absoluteX="-40dp" />

        <TextView
            android:id="@+id/num1"
            android:layout_width="84dp"
            android:layout_height="110dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/table_guideline"
            />

        <TextView
            android:id="@+id/num2"
            android:layout_width="87dp"
            android:layout_height="108dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="160dp"
            android:gravity="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/table"
            app:layout_constraintTop_toTopOf="@+id/table" />

        <TextView
            android:id="@+id/num3"
            android:layout_width="85dp"
            android:layout_height="105dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="57dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/table_guideline_2"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/num4"
            android:layout_width="80dp"
            android:layout_height="106dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/table_guideline" />

        <TextView
            android:id="@+id/num5"
            android:layout_width="86dp"
            android:layout_height="99dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:gravity="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/num4" />

        <TextView
            android:id="@+id/num6"
            android:layout_width="90dp"
            android:layout_height="104dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/table_guideline_2"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/num7"
            android:layout_width="34dp"
            android:layout_height="25dp"
            android:layout_marginEnd="130dp"
            android:layout_marginRight="130dp"
            android:layout_marginBottom="55dp"
            android:gravity="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/table_guideline_2"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="70dp"
            android:layout_height="29dp"
            android:layout_marginTop="2dp"
            android:text="@string/amount"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/table_guideline_2" />

        <TextView
            android:id="@+id/sumAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:text=""
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/amount"
            app:layout_constraintTop_toTopOf="@+id/table_guideline_2" />

        <TextView
            android:id="@+id/bet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/bet"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amount" />

        <TextView
            android:id="@+id/sumBet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/bet"
            app:layout_constraintTop_toBottomOf="@+id/sumAmount" />

        <TextView
            android:id="@+id/winning_bet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/winning_bet"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bet" />

        <TextView
            android:id="@+id/sumWinning_bet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/winning_bet"
            app:layout_constraintTop_toBottomOf="@+id/sumBet" />

        <Button
            android:id="@+id/clear_all_bet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="37dp"
            android:text="@string/clear_all_bet"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>